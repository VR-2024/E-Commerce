import { inngest } from "./inngest";
import { connectDB } from "./db";
import User from "@/models/user";

/**
 * Function to save user data when a new user is created in Clerk.
 */
export const syncUserCreation = inngest.createFunction(
  { id: "sync-user-from-clerk" },       // Unique ID for this function
  { event: "clerk/user.created" },    // The event this function listens to
  async ({ event }) => {
    // Get user data from the event payload
    const { id, first_name, last_name, image_url, email_addresses } = event.data;

    const userData = {
      _id: id,
      name: `${first_name} ${last_name}`,
      email: email_addresses[0].email_address,
      imageUrl: image_url,
    };

    // Connect to the database and create the new user
    await connectDB();
    await User.create(userData);

    return { message: "User created successfully" };
  }
);

/**
 * Function to update user data when modified in Clerk.
 */
export const syncUserUpdation = inngest.createFunction(
  { id: "update-user-from-clerk" },     // Unique ID
  { event: "clerk/user.updated" },    // Listens to the user.updated event
  async ({ event }) => {
    const { id, first_name, last_name, image_url, email_addresses } = event.data;

    const userData = {
      name: `${first_name} ${last_name}`,
      email: email_addresses[0].email_address,
      imageUrl: image_url,
    };

    // Connect to the database and update the existing user by their ID
    await connectDB();
    await User.findByIdAndUpdate(id, userData);

    return { message: "User updated successfully" };
  }
);

/**
 * Function to delete a user when deleted from Clerk.
 */
export const syncUserDeletion = inngest.createFunction(
  { id: "delete-user-from-clerk" },     // Unique ID
  { event: "clerk/user.deleted" },    // Listens to the user.deleted event
  async ({ event }) => {
    const { id } = event.data;

    // Connect to the database and delete the user by their ID
    await connectDB();
    await User.findByIdAndDelete(id);

    return { message: "User deleted successfully" };
  }
);